generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRESQL")
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

model Appointment {
  id        String            @id @default(cuid())
  patientId String
  doctorId  String
  startTime DateTime
  endTime   DateTime
  status    AppointmentStatus @default(SCHEDULED)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

enum QueueStatus {
  WAITING
  CALLED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Queue {
  id            String      @id @default(uuid())
  appointmentId String?     @unique
  patientId     String
  doctorId      String
  queueNumber   Int
  status        QueueStatus @default(WAITING)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([doctorId, status, queueNumber])
}
